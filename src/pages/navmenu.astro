      <script>
      const expands = document.querySelectorAll('nav [aria-expanded]')
      for(let el of expands){
        el.addEventListener('click',onclick)

        const ctrlid = el.getAttribute('aria-controls')
        const ctrls = document.getElementById(ctrlid)


         const list = ctrls?.querySelectorAll('button, a')
         const last = list[list?.length-1]
        const first = list[0]
          
        if(first){
          first.addEventListener('keydown',closeon_tab)
        }
         if(last){
             last.addEventListener('keydown',closeontab)
         }
        function closeon_tab(ev){
          if(ev.key==='Tab' && ev.shiftKey){
           console.log(ev)
           el.setAttribute('aria-expanded','false')
           ctrls.style.display = 'none'
          }
        }
         function closeontab(ev){
           if(ev.key==='Tab' && !ev.shiftKey) {
             el.setAttribute('aria-expanded','false')
             ctrls.style.display = 'none'
           }
         }



        function onclick(ev){
          const el = ev.currentTarget
          const state = el.getAttribute('aria-expanded')
          const next = state === 'true' ? false : true
          el.setAttribute('aria-expanded',next)
          if(!ctrls) return
        
         ctrls.style.display = next ? 'block': 'none';
        }
      }
      
      window.addEventListener('click',clickOutside)
      window.addEventListener('keydown',closeEsc)

      function closeEsc(ev){
        if(ev.key!=='Escape') return;
    
        const aria = document.querySelector('[aria-expanded="true"]')
        if(!aria) return;

        const ctrlsid = aria.getAttribute('aria-controls')
        if(!ctrlsid) return;
        const ctrls = document.getElementById(ctrlsid)
        if(!ctrls) return

        aria.setAttribute('aria-expanded','false')
        aria.focus()
        ctrls.style.display = 'none'
      }


      function clickOutside(ev){
        const aria = document.querySelector('[aria-expanded="true"]')
        const target = ev.target

        if(!aria) return;
        if(target===aria || aria.contains(target)) return ;

        const ctrlsid = aria.getAttribute('aria-controls')
        if(!ctrlsid) return;
        const ctrls = document.getElementById(ctrlsid)
        if(!ctrls) return
        const inside = ctrls.contains(target)
        // const insideAria = target.closest('[aria-expanded')

        if(inside) return;
        
        aria.setAttribute('aria-expanded','false')
        ctrls.style.display = 'none'
        
        //
      }


      </script>
